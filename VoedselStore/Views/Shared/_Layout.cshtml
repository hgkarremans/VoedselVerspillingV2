
<!DOCTYPE html>

<html>
<head>  
    <meta name="viewport" content="width=device-width" />
    <title>VoedselVerspilling</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />   
    <style>
        h1 {
            font-family: Arial, sans-serif;
        }

        p {
            font-family:Calibri, sant-serif;
        }
    </style>
</head>
<body style="background-color:powderblue;">
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light  ">

            <a class="navbar-brand"  asp-action="Index">Home</a>
            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @if (User.IsInRole("Student"))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="MaaltijdBox" asp-action="Gereserveerd">Mijn Reserveringen</a>
                        </li>
                    }
                    else if (User.IsInRole("Employee"))
                    {

                        <li class="nav-item">
                            <a class="nav-link " asp-controller="MaaltijdBox" asp-action="AndereKantines">MaaltijdBoxen Andere Kantines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="MaaltijdBox" asp-action="Aanmaken">Maaltijdbox Maken</a>
                        </li>
                    }
                    
                    
                </ul>

            </div>
            <div class="ml auto">
                <ul class="navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Inloggen</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Registreren</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }

                </ul>

            </div>
        </nav>
        @RenderBody()
    </div>
</body>
</html>
